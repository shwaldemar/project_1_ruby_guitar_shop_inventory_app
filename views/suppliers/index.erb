
<h2>Suppliers</h2>
<hr>

<nav>
  <ul>
    <li>
      <a class="linktitle" href="/suppliers/new">Add new supplier</a>
    </li>
  </ul>
</nav>

<hr>

<table>
  <tr>
    <th>Id:</th>
    <th>Name:</th>
  </tr>

  <% @suppliers.each do |supplier| %>

    <tr>
    <td> <%= supplier.id %> </td>
    <td> <%= supplier.name %> </td>

  <td><a class="linktitle" href="suppliers/<%= supplier.id %>/edit">Edit</a></td>
  <form class="" action="suppliers/<%= supplier.id %>/delete" method="post">
    <td><input type="submit" name="delete" value="Delete"></td>
  </form></tr>

  <% end %>
  </table>
