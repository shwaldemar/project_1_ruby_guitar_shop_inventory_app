<div class="suppliers">
<h2>Suppliers</h2>
<hr>

<nav>
  <ul>
    <li>
      <a class="linktitle" href="/suppliers">Display suppliers</a>
    </li>
    <li>
      <a class="linktitle" href="/suppliers/new">Add new supplier</a>
    </li>
  </ul>
</nav>

<hr>

<table>
  <tr>
    <th>Id:</th>
    <th>Name:</th>
  </tr>

  <% @suppliers.each do |supplier| %>

    <!-- <h3><a href="/supplier/<%= supplier.id %>"><%= supplier.name %></a></h3> -->
    <tr>
    <td> <%= supplier.id %> </td>
    <td> <%= supplier.name.capitalize %> </td>

  <td><a class="linktitle" href="suppliers/<%= supplier.id %>/edit">Edit this supplier:</a></td>

  <td><form class="" action="suppliers/<%= supplier.id %>/delete" method="post"></td>
    <td><input type="submit" name="delete" value="Delete this supplier"></td>
  </form></td></tr>



  <% end %>
  </table>

</div>
