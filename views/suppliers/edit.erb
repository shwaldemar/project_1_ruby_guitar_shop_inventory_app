<h2>Edit<% @supplier.name %></h2>
<form method="post" action=/suppliers/<%= @supplier.id.to_i %>

  <div class="form-el">
    <label for="name"> Name: </label>
    <input
    type="text"
    name="name"
    id="name"
    value="<%= @supplier.name %>"
    >
  </div>

  <div class="form-el">
    <label for="id"> Id: </label>
    <input
    type="text"
    name="id"
    id="id"
    value="<%= @supplier.id %>"
    >
  </div>
  <input type="submit" value="Edit supplier">
</form>
